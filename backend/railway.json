{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3001",
        "WHATSAPP_SESSION_ID": "main-session",
        "MAX_RETRIES": "3",
        "RECONNECT_INTERVAL": "30000"
      }
    }
  },
  "functions": {
    "timeout": 600,
    "memory": 2048
  }
}
